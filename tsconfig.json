{
	"compilerOptions": {
		"module": "CommonJS",
		"target": "ES2024",
		"lib": ["ES2024"],
		"outDir": "dist",
		"rootDir": "src",
		"declaration": true,
		"declarationDir": "types",
		"skipLibCheck": true,
		"esModuleInterop": true,
	},
	"exclude": [
		"node_modules"
	],
	"include": [
		"src/**/*.ts"
	]
}